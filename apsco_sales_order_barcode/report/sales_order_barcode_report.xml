<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="paper_format_sales_order_barcode" model="report.paperformat">
        <field name="name">Sale Order Barcode (3x2)</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">52</field>
        <field name="page_width">74</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="sales_order_barcode_report_id" model="ir.actions.report">
        <field name="name">Sales Order Barcode Report</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">apsco_sales_order_barcode.sales_order_barcode_report</field>
        <field name="report_file">apsco_sales_order_barcode.sales_order_barcode_report</field>
        <field name="paperformat_id" ref="apsco_sales_order_barcode.paper_format_sales_order_barcode"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>
    
    <template id="sales_order_barcode_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="text-center mt-3">
                    <div t-field="doc.origin" t-options="{'widget':'barcode', 'symbology': 'auto'}"/>
                    <div t-field="doc.origin"/>
                </div>
            </t>
        </t>
    </template>
</odoo>