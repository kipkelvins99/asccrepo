<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_payroll" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.payroll
            </field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Payroll" string="NIS RATES" data-key="hr_payroll"
                         groups="hr_payroll.group_hr_payroll_manager">
                        <h2>NIS Rates</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>

                                <div>
                                    <div class="o_setting_right_pane">
                                        <div class="text-muted content-group mt16">
                                            <div>
                                                <span class="o_form_label">% Deductible</span>
                                                <field name="nis_deductible_percentage"/>
<!--                                            </div>-->
<!--                                            <div>-->
                                                <span class="o_form_label">Minimum Age</span>
                                                <field name="nis_minimum_age"/>
                                            </div>
                                            <div>
                                                <span class="o_form_label">Maximum Age</span>
                                                <field name="nis_maximum_age"/>
                                            </div>
                                            <div>
                                                <span class="o_form_label">Employee Acc No</span>
                                                <field name="nis_employee_gl_account_number"/>
                                            </div>
                                            <div>
                                                <span class="o_form_label">Employer Acc No</span>
                                                <field name="nis_employer_gl_account_number"/>
                                            </div>
                                            <div>
                                                <span class="o_form_label">Show Full Salary</span>
                                                <field name="nis_show_full_salary"/>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="app_settings_block" data-string="Payroll" string="PAYE RATES" data-key="hr_payroll"
                             groups="hr_payroll.group_hr_payroll_manager">
                            <h2>PAYE Rates</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>

                                    <div>
                                        <div class="o_setting_right_pane">
                                            <div class="text-muted content-group mt16">
                                                <div>
                                                    <span class="o_form_label">Personal Deduction</span>
                                                    <field name="paye_personal_deduction"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Senior Citizen Deduction</span>
                                                    <field name="paye_senior_citizen_deduction"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Mortgage Limit</span>
                                                    <field name="paye_mortgage_limit"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Tertiary Education Limit</span>
                                                    <field name="paye_tertiary_education_limit"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Account No</span>
                                                    <field name="paye_account_number"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Senior Citizen Age</span>
                                                    <field name="paye_senior_citizen_age"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Alimony limit</span>
                                                    <field name="paye_alimony_limit"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Other Annuities limit</span>
                                                    <field name="paye_other_annuities_limit"/>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="app_settings_block" data-string="Payroll" string="Health Surcharge Rates"
                             data-key="hr_payroll" groups="hr_payroll.group_hr_payroll_manager">
                            <h2>Health Surcharge Rate</h2>

                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div>
                                        <div class="o_setting_right_pane">
                                            <div class="text-muted content-group mt16">
                                                <div>
                                                    <span class="o_form_label">Minimum Age</span>
                                                    <field name="health_surcharge_minimum_age"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Maximum Age</span>
                                                    <field name="health_surcharge_maximum_age"/>
                                                </div>
                                                <div>
                                                    <span class="o_form_label">Account No</span>
                                                    <field name="health_surcharge_account_number"/>
                                                </div>
                                            </div>
                                            <div/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>