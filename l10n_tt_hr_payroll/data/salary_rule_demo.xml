<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="salary_rule_paye" model="hr.salary.rule.category">
            <field name="name">PAYE</field>
            <field name="code">PAYE</field>
        </record>

        <record id="hr_rule_paye" model="hr.salary.rule">
            <field name="amount_select">code</field>
            <field name="code">PAYE</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="name">PAYE Rate</field>
            <field name="sequence" eval="99"/>
            <field name="amount_python_compute">result = -payslip.paye_rate</field>
            <field name="struct_id" ref="hr_payroll.structure_002"/>
         </record>
        <record id="hr_rule_health_surcharge" model="hr.salary.rule">
            <field name="amount_select">code</field>
            <field name="code">HLSR</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="name">Health Surcharge Rate</field>
            <field name="sequence" eval="99"/>
            <field name="amount_python_compute">result = -payslip.health_rate</field>
            <field name="struct_id" ref="hr_payroll.structure_002"/>
         </record>
        <record id="hr_rule_nis" model="hr.salary.rule">
            <field name="amount_select">code</field>
            <field name="code">NIS</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="name">NIS Rate</field>
            <field name="sequence" eval="99"/>
            <field name="amount_python_compute">result = -payslip.nis_rate</field>
            <field name="struct_id" ref="hr_payroll.structure_002"/>
         </record>

    </data>
</odoo>
