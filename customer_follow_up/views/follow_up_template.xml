<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="template_followup_report_main"
                  inherit_id="account_followup.template_followup_report">
            <div class="col-md-3 col-lg-2 col-xl-4" position="inside">
                <br/>
                <span>Credit Limit:
                    <t t-esc="invoice_address_id.credit_limit"/>
                </span>
                <br/>
                <span>Payment Term:
                    <t t-esc="invoice_address_id.property_payment_term_id.name"/>
                </span>
            </div>
            <xpath expr="//table[hasclass('o_account_reports_table')]"
                   position="after">
                <templates id="template">
                    <t t-name="AgeingTemp">
                        <div>
                            <div class="table-responsive">
                                <table class="o_account_reports_table table-hover"
                                       width="100%">
                                    <thead class="o_account_reports_header_hierarchy">
                                        <tr>
                                            <th class="o_account_report_column_header"
                                                style="text-align:center; white-space:nowrap;">
                                                Current
                                            </th>
                                            <th class="o_account_report_column_header"
                                                style="text-align:center; white-space:nowrap;">
                                                1-30
                                            </th>
                                            <th class="o_account_report_column_header"
                                                style="text-align:center; white-space:nowrap;">
                                                31-60
                                            </th>
                                            <th class="o_account_report_column_header"
                                                style="text-align:center; white-space:nowrap;">
                                                61-90
                                            </th>
                                            <th class="o_account_report_column_header"
                                                style="text-align:center; white-space:nowrap;">
                                                91-120
                                            </th>
                                            <th class="o_account_report_column_header"
                                                style="text-align:center; white-space:nowrap;">
                                                Older
                                            </th>

                                            <th class="o_account_report_column_header"
                                                style="text-align:center; white-space:nowrap;">
                                                Total
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="o_account_reports_default_style"
                                            style="text-align:center; white-space:nowrap;">
                                            <td class="o_account_report_line o_account_report_line_indent">
                                                <span t-esc="model.report_new(options)[0]['symbol']"/>
                                                <span t-esc="model.report_new(options)[1]['current']"/>
                                            </td>
                                            <td>
                                                <span t-esc="model.report_new(options)[0]['symbol']"/>
                                                <span t-esc="model.report_new(options)[2]['due1']"/>
                                            </td>
                                            <td>
                                                <span t-esc="model.report_new(options)[0]['symbol']"/>
                                                <span t-esc="model.report_new(options)[3]['due2']"/>
                                            </td>
                                            <td>
                                                <span t-esc="model.report_new(options)[0]['symbol']"/>
                                                <span t-esc="model.report_new(options)[4]['due3']"/>
                                            </td>
                                            <td>
                                                <span t-esc="model.report_new(options)[0]['symbol']"/>
                                                <span t-esc="model.report_new(options)[5]['due4']"/>
                                            </td>
                                            <td>
                                                <span t-esc="model.report_new(options)[0]['symbol']"/>
                                                <span t-esc="model.report_new(options)[6]['due5']"/>
                                            </td>
                                            <td>
                                                <span t-esc="model.report_new(options)[0]['symbol']"/>
                                                <span t-esc="model.report_new(options)[7]['total']"/>

                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>

                </templates>
            </xpath>
        </template>
        <template id="template_address_report_main"
                  inherit_id="account_followup.followup_filter_info_template">
            <xpath expr="//div[hasclass('fallback_header')]" position="after">
                <hr class="float-right"
                    style="width:40%; margin-right:2px; border-width:2px; color:black; background-color:black; !important;"/>
            </xpath>
        </template>
        <template id="template_space_report_main"
                  inherit_id="account_reports.line_template">
            <xpath expr="//td[1]" position="replace">
                <t t-if="not options.get('followup_level')">
                    <td t-att-data-id="line['id']"
                        t-att-class="'o_account_report_line o_account_report_line_indent ' + (line.get('unfoldable') and 'js_account_report_foldable o_foldable_total' or '') + ' ' + line.get('name_class', '')"
                        t-att-data-unfolded="line.get('unfolded', False)"
                        t-att-data-offset="line.get('offset', False)" t-att-data-progress="line.get('progress', False)"
                        t-att-data-remaining="line.get('remaining', False)"
                    >
                        <t t-if="line.get('unfoldable')">
                            <span t-att-data-id="line['id']" class="o_account_reports_caret_icon">
                                <i class="fa fa-caret-down" t-if="line.get('unfolded')" role="img" aria-label="Unfolded"
                                   title="Unfolded"/>
                                <i class="fa fa-caret-right" t-if="not line.get('unfolded')" role="img"
                                   aria-label="Folded" title="Folded"/>
                            </span>
                        </t>
                        <t t-elif="not line.get('caret_options')">
                            <span t-att-data-id="line['id']" class="o_account_reports_caret_icon">
                                <i class="fa fa-caret-right invisible" role="img" aria-label="Unfolded"
                                   title="Unfolded"/>
                            </span>
                        </t>
                        <t t-if="not line.get('caret_options')">
                            <span class="account_report_line_name" t-att-title="line.get('title_hover')"
                                  t-att-data-account-code="line.get('code')">
                                <a t-if="line.get('action_id')" t-att-data-id="line['id']"
                                   t-att-data-action-id="line['action_id']"
                                   t-att-action="line.get('action', 'execute_action')">
                                    <t t-esc="line.get('name')"/>
                                </a>
                                <t t-if="not line.get('action_id')" t-esc="line.get('name')"/>
                                <span class="js_account_report_line_footnote" t-att-data-id="line['id']">
                                    <sup t-if="line.get('footnote')">
                                        <b class="o_account_reports_footnote_sup">
                                            <a t-att-href="'#footnote'+line['footnote']"></a>
                                            <t t-esc="line['footnote']"/>
                                        </b>
                                    </sup>
                                </span>
                            </span>
                        </t>
                        <t t-if="line.get('caret_options')">
                            <t t-if="not context.get('print_mode')">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href='#'>
                                        <span t-att-data-id="line['id']" t-att-class="domainClass"
                                              t-att-title="line.get('title_hover')"
                                              t-att-data-account-code="line.get('code')">
                                            <t t-esc="line.get('name')"/>
                                        </span>
                                    </a>
                                    <span class="js_account_report_line_footnote" t-att-data-id="line['id']">
                                        <sup t-if="line.get('footnote')">
                                            <b class="o_account_reports_footnote_sup">
                                                <a t-att-href="'#footnote'+line['footnote']"></a>
                                                <t t-esc="line['footnote']"/>
                                            </b>
                                        </sup>
                                    </span>
                                    <div class="dropdown-menu o_account_reports_domain_dropdown" role="menu">
                                        <t t-call="account_reports.line_caret_options"/>
                                        <a role="menuitem" tabindex="-1" t-att-data-id="line['id']"
                                           class="dropdown-item js_account_reports_add_footnote">Annotate
                                        </a>
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <span t-att-data-id="line['id']" t-att-class="domainClass"
                                      t-att-title="line.get('title_hover')"
                                      t-att-data-account-code="line.get('code')">
                                    <t t-esc="line.get('name')"/>

                                </span>
                                <span class="js_account_report_line_footnote" t-att-data-id="line['id']">
                                    <sup t-if="line.get('footnote')">
                                        <b class="o_account_reports_footnote_sup">
                                            <a t-att-href="'#footnote'+line['footnote']"></a>
                                            <t t-esc="line['footnote']"/>
                                        </b>
                                    </sup>
                                </span>
                            </t>
                        </t>
                    </td>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
